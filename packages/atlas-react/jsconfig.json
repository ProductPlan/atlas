{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "jsx": "preserve",
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
      "@components/*": ["./src/components/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
