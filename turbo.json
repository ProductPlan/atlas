{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["build:lib", "^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "build:lib": {
      "dependsOn": ["^build:lib"],
      "outputs": []
    },
    "build:watch": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {
      "outputs": []
    },
    "export": {
      "dependsOn": ["lint", "test", "build"],
      "outputs": []
    }
  },
  "globalEnv": ["NEXT_PUBLIC_BASE_PATH"]
}
